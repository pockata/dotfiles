#!/usr/bin/env bash
#vim:ft=sh

set -e

source "${HOME}/bin/helpers.sh"

projects="${HOME}/Projects"

# Always create projects in the personal dir
# if ask "${txtylw}Is this a personal project (work otherwise)?${txtrst}" Y; then
# 	dir="${projects}/personal"
# else
# 	dir="${projects}/work"
# fi
dir="${projects}/personal"

project="${dir}/${1}"

if [ -d "${project}" ]; then
	echo -e "Error. Project already exists."
fi

mkdir -p "${project}"

tmux-sessionizer "${project}"

